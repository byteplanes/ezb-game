  script(src='https://code.jquery.com/jquery-1.11.1.js')
  script(type='text/javascript', src='/socket.io/socket.io.js')
  script.
    $(function () {
    var socket = io();

    var user = !{JSON.stringify(username)};//"no user set yet";

    $('.startgame').click(function(){
    $('.infotext').text('Please wait, we are searching for an opponent...');
    $('.startgame').text('Cancel');
    socket.emit('newgame', user);
    return false;
    });

    socket.on('startgame', function (msg){
      $('.infotext').text('');
      var dataarr = msg.split("||");
      $('.gamebox').prepend('<img style="width:12%" id="p2avatar" src="/avatars/'+dataarr[3]+'.png" prepended="yes"/>')
      $('.gamebox').prepend('<img style="width:75%" id="middleimage" src=/images/mainready.png prepended="yes"/>')
      $('.gamebox').prepend('<img style="width:12%" id="p1avatar" src="/avatars/'+dataarr[2]+'.png" prepended="yes"/>')
    });

    });
